#!/usr/bin/perl

use Verse;

if (@ARGV == 0) {
	rhyme;

	my $theme = verse->{paths}{theme}.'/render';
	die "Failed to find theme file: $theme\n"
		unless -x $theme;

	eval { require $theme } or die "$@\n";
	exit 0;
}

if ($ARGV[0] == 'new') {
	system("mkdir .verse");
	exit 0;
}

print "USAGE: $0 [new]\n";
exit 1;
